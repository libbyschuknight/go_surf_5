<h2 align="center"><%= @surf_spot.name %></h2>
<div class="well col-xs-8 col-xs-offset-2">

  <% if @surf_spot.user %>
    <ul class="listing">
      <div class="row center">
        <div class="col-md-4 col-md-offset-4">
          <li>Created by:</li>
          <li>
            <%= link_to gravatar_for(@surf_spot.user), user_path(@surf_spot.user) %>
          </li>
          <li class="surf-spot-name">
            <%= link_to @surf_spot.user.username, user_path(@surf_spot.user) %>
          </li>
          <li>
            <small>
              <%= pluralize(@surf_spot.user.surf_spots.count, "surf spot") if @surf_spot.user.surf_spots %>
            </small>
          </li>
        </div>
      </div>
    </ul>
  <% end %>

  <div class="center description">
    <%= simple_format(@surf_spot.description) %>
  </div>

  <!-- TODO: change to use divs  -->
  <p>
    <strong>Place</strong>
    <%= @surf_spot.place %>
  </p>

  <p>
    <strong>Region:</strong>
    <%= @surf_spot.region %>
  </p>

  <p>
    <strong>Country</strong>
    <%= @surf_spot.country %>
  </p>

  <p>
    <strong>Latitude:</strong>
    <%= @surf_spot.latitude %>
  </p>

  <p>
    <strong>Longtitude</strong>
    <%= @surf_spot.longitude %>
  </p>

  <p>
    <strong>Rating:</strong>
    <%= @surf_spot.stoke_rating %>
  </p>


  <div class="surf-spot-actions">
    <% if logged_in? && (current_user == @surf_spot.user || current_user.admin?) %>
      <%= link_to "Edit this spot", edit_surf_spot_path(@surf_spot), class: "btn btn-xs btn-primary" %>
      <%= link_to "Delete this spot", surf_spot_path(@surf_spot),
          method: :delete,
          data: { confirm: "Are you sure you want to delete the spot?" },
          class: "btn btn-xs btn-danger"
      %>
    <% end %>
    <%= link_to "View all spots", surf_spots_path, class: "btn btn-xs btn-success" %>
  </div>
</div>
