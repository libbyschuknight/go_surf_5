<%= render "shared/errors", object: @surf_spot %>

<div class = "row">
  <div class = "col-xs-12">
    <%= form_for @surf_spot, :html => { class: "form-horizontal", role: "form" } do |f| %>

      <div class="form-group">
        <div class="control-label col-sm-2">
          <%= f.label :name %>
        </div>
        <div class="col-sm-8">
          <%= f.text_field :name, class: "form-control", placeholder: "Name", autofocus: true %>
        </div>
      </div>

      <div class="form-group">
        <div class="control-label col-sm-2">
          <%= f.label :description %>
        </div>
        <div class="col-sm-8">
          <%= f.text_area :description, rows: 5, class: "form-control", placeholder: "Description", autofocus: true %>
        </div>
      </div>

      <div class="form-group">
        <div class="control-label col-sm-2">
          <%= f.label :place %>
        </div>
        <div class="col-sm-8">
          <%= f.text_field :place, class: "form-control", placeholder: "Place", autofocus: true %>
        </div>
      </div>

      <div class="form-group">
        <div class="control-label col-sm-2">
          <%= f.label :region %>
        </div>
        <div class="col-sm-8">
          <%= f.text_field :region, class: "form-control", placeholder: "Region", autofocus: true %>
        </div>
      </div>

      <div class="form-group">
        <div class="control-label col-sm-2">
          <%= f.label :country %>
        </div>
        <div class="col-sm-8">
          <%= f.text_field :country, class: "form-control", placeholder: "Country", autofocus: true %>
        </div>
      </div>


      <div class="form-group">
        <div class="control-label col-sm-2">
          <%= f.label :latitude %>
        </div>
        <div class="col-sm-8">
          <%= f.text_field :latitude, class: "form-control", placeholder: "Latitude", autofocus: true %>
        </div>
      </div>

      <div class="form-group">
        <div class="control-label col-sm-2">
          <%= f.label :longitude %>
        </div>
        <div class="col-sm-8">
          <%= f.text_field :longitude, class: "form-control", placeholder: "Longitude", autofocus: true %>
        </div>
      </div>


      <div class="form-group">
        <div class="control-label col-sm-2">
          <%= f.label :stoke_rating %>
        </div>
        <div class="col-sm-8">
          <%= f.text_field :stoke_rating, class: "form-control", placeholder: "Rating", autofocus: true %>
        </div>
      </div>


      <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
          <%= f.submit class: "btn btn-primary btn-lg" %>
          <%= link_to "Cancel", surf_spots_path %>
        </div>
      </div>
    <% end %>
  </div>
</div>
